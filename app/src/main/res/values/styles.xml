<resources>

    <!-- Base application theme. -->
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="homeAsUpIndicator">@mipmap/ic_back</item>
    </style>

    <!-- Default -->
    <style name="MemoTheme.Default" parent="AppTheme">
        <item name="colorPrimary">@color/colorHeaderBar1</item>
        <item name="colorPrimaryDark">@color/colorStatusBar1</item>
        <item name="colorSecondary">@color/colorEditBottomBar1</item>
        <item name="colorAccent">@color/colorFabBg1</item>
        <item name="android:colorBackground">@color/colorThemeBg1</item>
    </style>

    <style name="DeleteAlertDialogTheme.Default" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorHeaderBar1</item>
        <item name="android:background">@color/colorThemeBg1</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

